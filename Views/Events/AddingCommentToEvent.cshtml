@using System.Security.Claims
@model EventMangmentSystem.ViewModel.AddCommentViewModel


<div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-0 border" style="background-color: #f0f2f5;">
        <div class="card-body p-4">
                @using (Html.BeginForm("AddingCommentToEvent", "Events", FormMethod.Post))
                {
                     <div class="form-outline mb-4">
                         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                         <input type="hidden" asp-for="EventId" />
                         <input type="text" name="Text" class="form-control mb-2" placeholder="Type comment..." required />
                         <span asp-validation-for="Text" class="text-danger"></span>
                         <button type="submit" class="btn btn-primary">Add Comment</button>
                     </div>
                }
                @if (Model.Comments == null || !Model.Comments.Any())
                {
                   <div class="card mb-4">
                     <div class="card-body">
                         <span>No Comments Yet, Write One!</span>
                     </div>
                 </div>
                }
          else
          {
            @foreach (var comment in Model.Comments)
            {
          <div class="card mb-4">
            <div class="card-body">
              <p>@comment.Text</p>

              <div class="d-flex justify-content-between">
                <div class="d-flex flex-row align-items-center">
                  <img src="../User.png" alt="avatar" width="25"
                    height="25" />
                             <p class="small mb-0 ms-2">@comment.User.FirstName </p>
                </div>
                <div class="d-flex flex-row align-items-center">
                 
                  <p class="small text-muted mb-0">3</p>
                </div>
              </div>
            </div>
          </div>
          }
         }




        </div>
      </div>
    </div>
  </div>